---
import { Picture } from "astro:assets";
import coverImg from "../assets/img/cover.jpg";
---

<div class="relative flex w-full items-center justify-center shadow">
  <div class="relative w-full lg:w-2/3">
    <Picture src={coverImg} alt="Nos Casamos" class="h-auto max-w-full" style="mask-image:  linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(240,253,250,1) 25%, rgba(240,253,250,1) 75%, rgba(255,255,255,0) 100%);" />
  </div>
  <h1
    class="text-allison absolute inset-x-0 bottom-1/3 z-10 text-center text-6xl"
  >
    Nos Casamos!
  </h1>
</div>
